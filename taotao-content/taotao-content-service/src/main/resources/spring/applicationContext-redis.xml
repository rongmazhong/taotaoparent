                    <constructor-arg name="host" value="10.0.0.71"></constructor-arg>
                    <constructor-arg name="port" value="70004"></constructor-arg>
                </bean>
                <bean class="redis.clients.jedis.HostAndPort">
                    <constructor-arg name="host" value="10.0.0.71"></constructor-arg>
                    <constructor-arg name="port" value="70005"></constructor-arg>
